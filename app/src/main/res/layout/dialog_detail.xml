<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ImageButtonDelete"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@null" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_save_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ImageButtonDelete"
        android:id="@+id/ImageButtonSave"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@null" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Data "
        android:layout_marginLeft="20dp"
        android:id="@+id/DialogDataToDo"
        android:gravity="left"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/ImageButtonSave"
        android:layout_toStartOf="@+id/ImageButtonSave" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:background="@null"
        android:id="@+id/ImageButtonBack"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/DialogDataToDo"
        android:layout_alignStart="@+id/DialogTitleToDo" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/opis"
        android:id="@+id/DialogDescriptionTodo"
        android:scrollbars="vertical"
        android:background="@null"
        android:lines="9"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/DialogTitleToDo"
        android:layout_alignStart="@+id/DialogTitleToDo" />

    <EditText
        android:id="@+id/DialogTitleToDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tytul"
        android:gravity="left"
        android:layout_marginTop="45dp"
     android:layout_marginLeft="25dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/DialogDataToDo"
        android:layout_alignEnd="@+id/DialogDataToDo" />


</RelativeLayout>